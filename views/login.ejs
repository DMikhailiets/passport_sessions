<div style="width: 100%; height: 90vh; display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <h1>Login</h1>
    <% if(messages.error) { %>
        <%= messages.error %>
    <%}%>
    <form action="/login" method="POST">
        <div style="display: flex; flex-direction: column;">
            <div style="margin-top: 1rem;">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div style="margin-top: 1rem;">
                <label for="password">Passw</label>
                <input type="password" id="password" name="password" required>
            </div>
        </div>
        <button style="width: 100%; margin-top: 1rem;"type="submit">Login</button>
        <a href="/register" style="width: 100%; display: flex; justify-content: center;">Registration</a>
    </form>
</div>